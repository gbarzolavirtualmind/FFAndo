block more-videos
  .widget
    h4.widget-title OTROS VIDEOS
    each item in data.relatedVideos
      .item.mars-videos-sidebar-widget-23-7
        .item-img
          a(title=item.title, href='video/'+item.id)
            img.img-responsive(width='360', height='240', src=item._.imageCloudinary.thumbnail(360, 240), alt=item.title)
          a(href='video/'+item.id)
            .img-hover
        h3
          a(title=item.title, href='video/'+item.id)=item.title
        .meta
          span.date 2 months ago
          span.views
            i.fa.fa-eye
            | 440
          span.heart
            i.fa.fa-heart
            | 28
          span.fcomments
            i.fa.fa-comments
            | 3